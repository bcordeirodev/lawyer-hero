# ============================================================================
# LAWYER HERO - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env.local and fill in your values
# 
# @author Bruno Cordeiro
# @version 1.0.0
# ============================================================================

# ============================================================================
# APP CONFIGURATION
# ============================================================================

# Application basic info
NEXT_PUBLIC_APP_NAME=LawyerHero
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://geovannanery.com

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================

# Google Analytics (opcional)
NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX

# Google Tag Manager (opcional)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXXX

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================

# Google Maps (opcional - para mapas de localização)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# reCAPTCHA (opcional - para proteção do formulário)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here

# ============================================================================
# EMAIL SERVICES
# ============================================================================

# Email service para envio de formulários de contato
EMAIL_SERVICE_API_KEY=your_email_service_api_key_here
EMAIL_FROM_ADDRESS=noreply@geovannanery.com
EMAIL_FROM_NAME=Dra. Geovanna Nery

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Development flags
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# UI Features
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Functionality
NEXT_PUBLIC_ENABLE_CONTACT_FORM=true
NEXT_PUBLIC_ENABLE_WHATSAPP_INTEGRATION=true
NEXT_PUBLIC_ENABLE_EMAIL_INTEGRATION=true

# Analytics
NEXT_PUBLIC_ENABLE_GOOGLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_GOOGLE_TAG_MANAGER=false

# External Services
NEXT_PUBLIC_ENABLE_GOOGLE_MAPS=false
NEXT_PUBLIC_ENABLE_RECAPTCHA=false

# Performance
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_ENABLE_CODE_SPLITTING=true

# ============================================================================
# SECURITY
# ============================================================================

# Security headers
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Rate limiting (para API de contato)
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ============================================================================
# LOCALIZATION
# ============================================================================

# Default country and language
NEXT_PUBLIC_DEFAULT_COUNTRY=BR
NEXT_PUBLIC_DEFAULT_LANGUAGE=pt-BR
NEXT_PUBLIC_DEFAULT_CURRENCY=BRL
NEXT_PUBLIC_DEFAULT_TIMEZONE=America/Sao_Paulo

# ============================================================================
# PERFORMANCE
# ============================================================================

# Image optimization
NEXT_PUBLIC_IMAGE_QUALITY=80
NEXT_PUBLIC_IMAGE_FORMAT=webp
NEXT_PUBLIC_ENABLE_LAZY_LOADING=true

# Caching
NEXT_PUBLIC_ENABLE_BROWSER_CACHING=true
NEXT_PUBLIC_CACHE_DURATION=3600

# ============================================================================
# NOTES
# ============================================================================
#
# 1. Apenas variáveis necessárias para o projeto atual foram incluídas
# 2. Dados do advogado permanecem no arquivo de configuração (src/constants/data.ts)
# 3. Variáveis opcionais estão marcadas como (opcional)
# 4. Mantenha as chaves sensíveis seguras e nunca as commite no version control
# 5. Use diferentes chaves para desenvolvimento e produção
#
# ============================================================================ 