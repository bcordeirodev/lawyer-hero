# ============================================================================
# APP CONFIGURATION
# ============================================================================

# Application basic info
NEXT_PUBLIC_APP_NAME=LawyerHero
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=https://geovannanery.com

# ============================================================================
# DEVELOPMENT
# ============================================================================

# Development flags
NODE_ENV=production
NEXT_PUBLIC_DEBUG_MODE=false

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# UI Features (produção - otimizadas)
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_WHATSAPP_INTEGRATION=true

# ============================================================================
# VERCEL DEPLOYMENT
# ============================================================================
#
# Para configurar na Vercel:
# 1. Acesse o dashboard da Vercel
# 2. Vá para Settings > Environment Variables
# 3. Adicione cada variável abaixo:
#
# NEXT_PUBLIC_APP_NAME=LawyerHero
# NEXT_PUBLIC_APP_VERSION=1.0.0
# NEXT_PUBLIC_APP_URL=https://geovannanery.com
# NODE_ENV=production
# NEXT_PUBLIC_DEBUG_MODE=false
# NEXT_PUBLIC_ENABLE_DARK_MODE=true
# NEXT_PUBLIC_ENABLE_ANIMATIONS=true
# NEXT_PUBLIC_ENABLE_WHATSAPP_INTEGRATION=true
#
# ============================================================================ 